{
  "id": "m21_micro_workflow_general",
  "moduleId": "M21",
  "title": "M21: General Follow-up Mini-Workflow (Stops on Reply)",
  "phase": 5,
  "estimatedMinutes": 18,
  "objectives": [
    "Run a segment-specific nurture sequence.",
    "Remove route tags to keep state clean.",
    "end follow-ups when responded tag exists."
  ],
  "allowedNodes": {
    "triggers": [
      "contact.tagAdded"
    ],
    "actions": [
      "tag.remove",
      "tag.add",
      "email.send"
    ],
    "logic": [
      "wait.duration",
      "ifElse"
    ]
  },
  "requirements": [
    {
      "type": "triggerIs",
      "value": "contact.tagAdded"
    },
    {
      "type": "triggerConfigEquals",
      "field": "tag",
      "value": "route:nurture_general"
    },
    {
      "type": "mustHaveNode",
      "value": "tag.remove"
    },
    {
      "type": "mustHaveNode",
      "value": "tag.add"
    },
    {
      "type": "mustHaveNode",
      "value": "wait.duration"
    },
    {
      "type": "mustContainIfElse",
      "minCount": 1
    },
    {
      "type": "nodeOrder",
      "sequence": [
        "tag.remove",
        "email.send",
        "wait.duration",
        "ifElse"
      ]
    }
  ],
  "testCases": [
    {
      "name": "No response, second touch sends",
      "event": {
        "type": "contact.tagAdded",
        "tag": "route:nurture_general"
      },
      "initialState": {
        "tags": [
          "route:nurture_general"
        ],
        "fields": {
          "email": "g@x.com"
        }
      },
      "expect": {
        "messages": [
          {
            "channel": "email",
            "contains": [
              "General Nurture 1"
            ]
          },
          {
            "channel": "email",
            "contains": [
              "General Nurture 2"
            ]
          }
        ]
      }
    },
    {
      "name": "Responded, second touch Endped",
      "event": {
        "type": "contact.tagAdded",
        "tag": "route:nurture_general"
      },
      "initialState": {
        "tags": [
          "route:nurture_general",
          "status:responded"
        ],
        "fields": {
          "email": "g@x.com"
        }
      },
      "expect": {
        "messages": [
          {
            "channel": "email",
            "contains": [
              "General Nurture 1"
            ]
          }
        ]
      }
    }
  ],
  "teachBackPrompt": "Explain how this micro-workflow prevents over-messaging and what would happen if you forgot the response check.",
  "hints": [
    {
      "level": 1,
      "text": "After the wait, check for status:responded before sending the second email."
    },
    {
      "level": 2,
      "text": "If TC2 still sends the second email, your condition is reversed or branches are swapped."
    }
  ],
  "adminNotes": {
    "acceptableVariants": [
      "Use SMS instead of second email if consent exists."
    ],
    "commonMistakes": [
      "Second message sends even when responded tag exists.",
      "Route tag not removed causing repeated triggers."
    ]
  }
}